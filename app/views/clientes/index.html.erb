<h3>Lista de Clientes</h3>


<%= form_tag clientes_path, :method => 'get', :class => 'form-search'  do %>
  <%= text_field_tag :search, params[:search], :class => 'input-medium search-query' %>
    <%= submit_tag "Consultar", :nome => nil, :class => 'btn btn-primary' %>
<% end %>


<table class="table table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>Nome</th>
    <th>Telefone</th>
    <th>Celular</th>
    <th>Email</th>
    <th colspan=3 style="text-align: center;">Ações</th>    
  </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.tel %></td>
        <td><%= cliente.cel %></td>
        <td><%= cliente.email %></td>
        <td style="text-align: center;"><%= link_to '', cliente, :class => 'icon-search', :title => 'Visualizar' %></td>
        <td style="text-align: center;"><%= link_to '', edit_cliente_path(cliente), :class => 'icon-pencil', :title => 'Editar' %></td>
        <td style="text-align: center;"><%= link_to '', cliente, :class => 'icon-trash', :method => :delete, :data => { :confirm => 'Are you sure?' }, :title => 'Apagar' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @clientes, :renderer => BootstrapPagination::Rails, :class => 'pagination pagination-centered' %>

<br />

<%= link_to 'Novo Cliente', new_cliente_path, :class => 'btn btn-primary' %>